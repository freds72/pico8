-- gagne
function gagne_update()
 tempspause=tempspause-1/30
 if tempspause<=0 then
  jeu_init(20-temps)
 end
end

function gagne_draw()
 jeu_draw()
 pal(8,2)
 spr(40,56,61,2,1)
 pal()
 spr(40,56,60,2,1)
 
 local t=flr(tempspause*10)/10
 print("nouvelle partie dans:"..t.."s",20,75,14)
 
 end
